<div class="container" style="margin-top: 60px; max-width: 500px;">
  <div class="card z-depth-3">
    <div class="card-content">
      <h5 class="center-align" style="margin-bottom: 30px;">📝 Crea un nuovo account</h5>

      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" } do |f| %>
        <div class="input-field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "validate" %>
          <%= f.label :email %>
        </div>

        <div class="input-field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "validate" %>
          <%= f.label :password %>
        </div>

        <div class="input-field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Conferma password", class: "validate" %>
          <%= f.label :password_confirmation %>
        </div>

        <div class="center-align" style="margin-top: 30px;">
          <%= f.submit "Registrati", class: "btn green darken-1" %>
        </div>
      <% end %>

      <div class="center-align" style="margin-top: 20px;">
        <%= link_to "Hai già un account? Accedi", new_session_path(resource_name), class: "blue-text text-darken-2" %>
      </div>
    </div>
  </div>
</div>
