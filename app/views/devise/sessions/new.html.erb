<div class="container" style="margin-top: 60px; max-width: 500px;">
  <div class="card z-depth-3">
    <div class="card-content">
      <h5 class="center-align" style="margin-bottom: 30px;">üîê Accedi al tuo account</h5>

      <%= form_with model: resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" } do |f| %>
        <div class="input-field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "validate" %>
          <%= f.label :email %>
        </div>

        <div class="input-field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "validate" %>
          <%= f.label :password %>
        </div>

        <p>
          <label>
            <%= f.check_box :remember_me %>
            <span>Ricordami</span>
          </label>
        </p>

        <div class="center-align" style="margin-top: 30px;">
          <%= f.submit "Accedi", class: "btn blue darken-2" %>
        </div>
      <% end %>

      <div class="center-align" style="margin-top: 20px;">
        <%= link_to "Hai dimenticato la password?", new_password_path(resource_name), class: "blue-text text-darken-2" %><br>
        <%= link_to "Non hai un account? Registrati", new_registration_path(resource_name), class: "blue-text text-darken-2" %>
      </div>
    </div>
  </div>
</div>
